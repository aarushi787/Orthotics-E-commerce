{
    "openapi": "3.0.0",
    "info": {
      "title": "Fox Orthotics API",
      "version": "1.0.0",
      "description": "Minimal OpenAPI spec for core endpoints"
    },
    "servers": [{ "url": "http://localhost:5000" }],
    "paths": {
      "/api/health": {
        "get": {
          "summary": "Health check",
          "responses": { "200": { "description": "OK" } }
        }
      },
      "/api/auth/login": {
        "post": {
          "summary": "User login",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "email": { "type": "string" }, "password": { "type": "string" } },
                  "required": ["email", "password"]
                }
              }
            }
          },
          "responses": { "200": { "description": "Returns token and user" }, "401": { "description": "Invalid credentials" } }
        }
      },
      "/api/products": {
        "get": { "summary": "List products", "responses": { "200": { "description": "List of products" } } }
      }
    },
    "components": {
      "securitySchemes": { "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" } }
    }
  }
